{
  "expo": {
    "name": "sportsphere-app",
    "slug": "sportsphere-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to your location to show your current location on the map.",
        "UIBackgroundModes": ["remote-notification"]
      }
    },
    "android": {
      // "permissions": ["ACCESS_FINE_LOCATION"],
      "permissions": ["RECEIVE_BOOT_COMPLETED"],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app needs access to your photos."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "The app needs access to your camera."
        }
      ]
    ]
  }
}
